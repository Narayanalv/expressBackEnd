{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",  // Changed back to commonjs
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "bootstrap/**/*",
    "controllers/**/*",
    "route/**/*",
    "lib/**/*",
    "*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}